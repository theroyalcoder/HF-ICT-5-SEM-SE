<project name="statistics" 
         default="compile">

  <property name="build.dir" value="build">

  <target name="init">
    <mkdir dir="build/classes"/>
  </target>

  <target name="compile"
          depends="init">
    <javac srcdir="." includeruntime="true"
        destdir="${build.dir}"/>
  </target>
</project>